		"jebbs.plantuml",
		"lextudio.restructuredtext",
		"littlefoxteam.vscode-python-test-adapter",
		"littlefoxteam.vscode-python-test-adapter",
		"mgesbert.python-path",
		"mhutchie.git-graph",
		"mikestead.dotenv",
		"ms-azuretools.vscode-docker",
		"ms-python.black-formatter",
